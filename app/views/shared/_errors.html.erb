<% if object.errors.any? %>
<section id="errors">
  <div>
  <header>
    <h2>
      Oops! The <%= object.class.name.humanize.downcase %> could not be saved. 
    </h2>
    <h3>
      Please correct the following <%= pluralize(object.errors.count, "error") %>:
    </h3>
  </header>
  <ul id="error-list">
    <% object.errors.full_messages.each do |message| %>
      <%= message %> 
    <% end %>
  </ul>
</div>
</section>
<% end %>