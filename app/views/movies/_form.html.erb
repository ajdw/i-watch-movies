<%= form_for(@movie) do |f| %>
  <%= render "shared/errors", object: @movie %>

   <fieldset>
   <ol id="movie-form">
  <p class="form-field">
    <%= f.label :title %><br/>
    <%= f.text_field :title, autofocus: true %>
  </p>
  <p class="form-field">
    <%= f.label :description %><br/>
    <%= f.text_area :description, cols: 40, rows: 7 %>
  </p>
  <p class="form-field">
    <%= f.label :rating %><br/>
    <%= f.select :rating, Movie::RATINGS, prompt: "Pick one" %>
  </p>
  <p class="form-field">
    <%= f.label :released_on %><br/>
    <%= f.date_select :released_on, {start_year: Date.today.year, end_year: Date.today.year - 140} %>
    
  </p>
  <p class="form-field">
    <%= f.label :total_gross %><br/>
    <%= f.number_field :total_gross %>
  </p>
  <p class="form-field">
    <%= f.label :cast %><br/>
    <%= f.text_field :cast %><br/>
  </p>
  <p class="form-field">
    <%= f.label :director %><br/>
    <%= f.text_field :director %><br/>
  </p>
  <p class="form-field">
    <%= f.label :duration %><br/>
    <%= f.text_field :duration, size: 10 %><br/>
  </p>  
  <p class="form-field">
    <%= f.label :image_file_name %><br/>
    <%= f.text_field :image_file_name %><br/>
  </p>


  <p>
    <%= f.submit %> |
    <%= link_to "CANCEL", movies_path, class: "cancel-link" %>
  </p>
  </ol>
  </fieldset
<% end %>








