<%= render 'layouts/header' %>

<article id="user">
  <header>
    <h1><%= @user.name %></h1>
    <h2><%= mail_to(@user.email) %></h2>
    <p><b>Member since: </b><%= @user.created_at.strftime("%B %Y") %></p>
  </header>
</article>

<div class="favorite-movies">
  <% if @favorite_movies.any? %>
  <h3>Favorite Movies</h3>
  <ul>
    <% @favorite_movies.each do |movie| %>
    <li>
      <%= link_to movie.title, movie %>
    </li>
    <% end %>
  </ul>
  <% end %>
  </div>

<div class="review">
  <% if @reviews.any? %>
    <h3>Reviews</h3>
    <ol id="reviews">
      <% @reviews.each do |review| %>
      <li>
        <%= link_to review.movie.title, review.movie %>
        <span class="star"><%= pluralize(review.stars, 'star') %> </span>
         <span id="time-posted"><%= review.created_at.strftime('%a %m/%d/%Y %T') %> 
        (<%= time_ago_in_words(review.created_at) %> ago)
        </span>
        <p>
          &quot;<%= review.comment %>&quot;
        </p>
      </li>
      <% end %>
    </ol>
  <% end %>
  </div>


<footer>
  <% if current_user?(@user) %>
  <nav>
    <%= link_to 'Edit Account', edit_user_path(@user), class: 'button' %>
    <%= link_to 'Delete Account', @user,
                method: :delete,
                data: { confirm: 'Are you sure you want to permanently delete your account?' },
                class: 'button' %>
  </nav>
  <% end %>
</footer>